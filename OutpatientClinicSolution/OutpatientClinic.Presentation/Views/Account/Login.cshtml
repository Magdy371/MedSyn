@model OutpatientClinic.Presentation.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>

<!-- Outer container to center and style the login page -->
<div class="login-page-container">

    <!-- Left side illustration -->
    <div class="login-illustration">
        <!-- Replace with your actual image path -->
        <img src="~/images/heart_illustration.png" alt="Cliniva Illustration" />
    </div>

    <!-- Right side form container -->
    <div class="login-form-container">
        <div class="welcome-text">
            <h2>Welcome to <span class="brand">Cliniva</span></h2>
            <p>Need an account? <a asp-action="Register" asp-controller="Account">Sign Up</a></p>
        </div>

        <h3>Sign In</h3>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <span asp-validation-for="UserName" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="options">
                <div>
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Remember me</label>
                </div>
                <a asp-action="ForgotPassword" asp-controller="Account" class="forgot-link">Forgot Password?</a>
            </div>

            <button type="submit" class="login-btn">Login</button>
        </form>

        <div class="alternative-logins">
            <p>OR</p>
            <div class="role-buttons">
                <button class="role-btn admin">Admin</button>
                <button class="role-btn doctor">Doctor</button>
                <button class="role-btn patient">Patient</button>
            </div>
        </div>
    </div>
</div>
