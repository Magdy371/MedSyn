@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar Navigation -->
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "") text-white" href="@Url.Action("Index", "Admin")" aria-label="Dashboard">
                            <i class="fa-solid fa-gauge"></i> Dashboard
                        </a>
                    </li>
                    @* <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ManageUsers" ? "active" : "") text-white" href="@Url.Action("ManageUsers", "Admin")" aria-label="Manage Users">
                            <i class="fa-solid fa-users"></i> Manage Users
                        </a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "") text-white"
                           href="@Url.Action("Index", "User")"
                           aria-label="Manage Users">
                            <i class="fa-solid fa-users"></i> Manage Users
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Department" ? "active" : "") text-white" href="@Url.Action("Index", "Department")" aria-label="Departments">
                            <i class="fa-solid fa-building"></i> Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Doctor" ? "active" : "") text-white" href="@Url.Action("Index", "Doctor")" aria-label="Doctors">
                            <i class="fa-solid fa-user-doctor"></i> Doctors
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Admin Dashboard</h1>
            </div>

            <!-- Quick Access Panels -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <i class="fa-solid fa-building"></i> Department Management
                        </div>
                        <div class="card-body">
                            <p>Manage all hospital departments, update, or delete them.</p>
                            <a href="@Url.Action("Index", "Department")" class="btn btn-primary" data-bs-toggle="tooltip" title="Go to Department Management">Manage Departments</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-success text-white">
                            <i class="fa-solid fa-user-doctor"></i> Doctor Management
                        </div>
                        <div class="card-body">
                            <p>View, edit, or remove doctors and filter them by department or specialty.</p>
                            <a href="@Url.Action("Index", "Doctor")" class="btn btn-success" data-bs-toggle="tooltip" title="Go to Doctor Management">Manage Doctors</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-info text-white">
                            <i class="fa-solid fa-address-book"></i> Contact Info Management
                        </div>
                        <div class="card-body">
                            <p>Manage contact information for users, staff, and facilities.</p>
                            <a href="@Url.Action("Index", "ContactInfo")" class="btn btn-info" data-bs-toggle="tooltip" title="Go to Contact Info Management">Manage Contact Info</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-warning text-white">
                            <i class="fa-solid fa-users"></i> Staff Management
                        </div>
                        <div class="card-body">
                            <p>Manage staff details, roles, and assignments.</p>
                            <a href="@Url.Action("Index", "Staff")" class="btn btn-warning" data-bs-toggle="tooltip" title="Go to Staff Management">Manage Staff</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-4">
        <p>&copy; 2025 Outpatient Clinic. All rights reserved.</p>
    </footer>
</div>