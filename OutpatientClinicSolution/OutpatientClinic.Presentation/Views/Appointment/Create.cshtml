@model OutpatientClinic.Presentation.Models.AppointmentViewModel

<h2>Create Appointment</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PatientSearch" class="control-label"></label>
        <input asp-for="PatientSearch" class="form-control" id="patientSearch" />
        <input type="hidden" asp-for="PatientId" />
        <div id="patientResults" class="list-group"></div>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control" id="departmentSelect">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId" class="control-label"></label>
        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control" id="doctorSelect">
            <option value="">-- Optional --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ClinicId" class="control-label"></label>
        <select asp-for="ClinicId" asp-items="ViewBag.Clinics" class="form-control">
            <option value="">-- Optional (Default: Emergency) --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentDateTime" class="control-label"></label>
        <input asp-for="AppointmentDateTime" class="form-control" />
        <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patientSearch').on('input', function () {
                var searchTerm = $(this).val();
                if (searchTerm.length > 2) {
                    $.getJSON('/Appointment/SearchPatients', { term: searchTerm }, function (data) {
                        $('#patientResults').empty();
                        $.each(data, function (i, item) {
                            $('#patientResults').append(
                                $('<div class="list-group-item">')
                                    .text(item.fullName + ' (' + item.email + ')')
                                    .attr('data-id', item.patientId)
                                    .click(function () {
                                        $('#PatientId').val(item.patientId);
                                        $('#patientSearch').val(item.fullName);
                                        $('#patientResults').empty();
                                    })
                            );
                        });
                    });
                }
            });

            $('#departmentSelect').change(function () {
                var departmentId = $(this).val();
                $.getJSON('/Appointment/GetDoctorsByDepartment', { departmentId: departmentId }, function (data) {
                    var items = '<option value="">-- Optional --</option>';
                    $.each(data, function (i, doctor) {
                        items += `<option value="${doctor.doctorId}">${doctor.name}</option>`;
                    });
                    $('#doctorSelect').html(items);
                });
            });
        });
    </script>
}