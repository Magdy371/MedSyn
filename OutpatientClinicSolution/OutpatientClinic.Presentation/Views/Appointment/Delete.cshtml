@model OutpatientClinic.DataAccess.Entities.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>
<div>
    <h4>Appointment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.FirstName @Model.Patient.LastName</dd>

        <dt class="col-sm-2">Doctor</dt>
        <dd class="col-sm-10">
            @if (Model.Doctor?.DoctorNavigation != null)
            {
                @($"Dr. {Model.Doctor.DoctorNavigation.FirstName} {Model.Doctor.DoctorNavigation.LastName}")
            }
        </dd>

        <dt class="col-sm-2">Date &amp; Time</dt>
        <dd class="col-sm-10">@Model.AppointmentDateTime.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
