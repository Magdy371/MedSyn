@model IEnumerable<OutpatientClinic.DataAccess.Entities.Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<h2>Appointments</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Appointment</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Department</th>
            <th>Clinic</th>
            <th>Date &amp; Time</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient.FirstName @item.Patient.LastName</td>
                <td>
                    @if (item.Doctor?.DoctorNavigation != null)
                    {
                        @($"Dr. {item.Doctor.DoctorNavigation.FirstName} {item.Doctor.DoctorNavigation.LastName}")
                    }
                </td>
                <td>@item.Department?.DepartmentName</td>
                <td>@item.Clinic?.ClinicName</td>
                <td>@item.AppointmentDateTime.ToString("g")</td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.AppointmentId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
