@model IEnumerable<OutpatientClinic.DataAccess.Entities.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>
<div class="mb-4">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-calendar-plus"></i> Create New Appointment
    </a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Doctor</th>
            <th>Clinic</th>
            <th>Date/Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Patient?.FirstName ?? "N/A") @(item.Patient?.LastName ?? "")</td>
                <td>@(item.Doctor?.DoctorNavigation?.FullName ?? "Unknown Doctor")</td>
                <td>@(item.Clinic?.ClinicName ?? "Unknown Clinic")</td>
                <td>@item.AppointmentDateTime.ToString("g")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>