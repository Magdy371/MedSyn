@model OutpatientClinic.DataAccess.Entities.ContactInfo
@{
    ViewData["Title"] = "Delete Contact Info";
}

<h2>Delete Contact Info</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Contact ID</dt>
        <dd class="col-sm-10">@Model.ContactId</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
