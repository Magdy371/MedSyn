@model OutpatientClinic.DataAccess.Entities.Department

@{
    ViewData["Title"] = "Create Department";
}

<h2>Create Department</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="DepartmentName" class="form-label">Department Name</label>
        <input asp-for="DepartmentName" class="form-control" required />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreatedBy" class="form-label">Created By</label>
        <input asp-for="CreatedBy" class="form-control" value="Admin" readonly />
    </div>

    <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Cancel</a>
</form>
