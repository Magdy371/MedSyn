@model List<OutpatientClinic.Presentation.Models.DepartmentCardModel>
@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_generatedView.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/listStyle.css">

<div class="modern-container">
    <h1 class="gradient-heading">
        <i class="fas fa-building-shield"></i>
        Medical Departments
    </h1>

    <table class="modern-table animate-table">
        <thead>
            <tr>
                <th>Specialty ID</th>
                <th>Department Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td class="fw-bold" style="color: var(--primary);">#@department.Id</td>
                    <td class="text-start">
                        <i class="fas fa-stethoscope me-2"></i>
                        @department.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a href="@Url.Action("Index", "Home")" class="glow-button">
            <i class="fas fa-home"></i>
            Back to Dashboard
        </a>
    </div>
</div>