@model DoctorViewModel

<h3>Are you sure you want to delete this doctor?</h3>
<div>
    <h4>Dr. @Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">License Number</dt>
        <dd class="col-sm-10">@Model.LicenseNumber</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>