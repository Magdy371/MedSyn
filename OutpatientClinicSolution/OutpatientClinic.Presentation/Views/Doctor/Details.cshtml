@model OutpatientClinic.DataAccess.Entities.Doctor
@{
    ViewData["Title"] = "Doctor Details";
}

<h2>Doctor Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Doctor ID</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>

        <dt class="col-sm-2">Specialty</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">License Number</dt>
        <dd class="col-sm-10">@Model.LicenseNumber</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.DepartmentName</dd>

        <dt class="col-sm-2">Staff</dt>
        <dd class="col-sm-10">
            @(Model.DoctorNavigation != null
                ? $"{Model.DoctorNavigation.FirstName} {Model.DoctorNavigation.LastName}"
                : "N/A")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
