@model OutpatientClinic.DataAccess.Entities.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<h1>Doctor Details</h1>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @(Model.DoctorNavigation?.FirstName + " " + Model.DoctorNavigation?.LastName)
        </dd>
        <dt class="col-sm-2">
            License Number
        </dt>
        <dd class="col-sm-10">
            @Model.LicenseNumber
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department?.DepartmentName
        </dd>
        <dt class="col-sm-2">
            Specialty
        </dt>
        <dd class="col-sm-10">
            @Model.Specialty
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
