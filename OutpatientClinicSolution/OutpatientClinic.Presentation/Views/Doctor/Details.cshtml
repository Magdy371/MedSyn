@model OutpatientClinic.Presentation.Models.DoctorViewModel

@{
    ViewData["Title"] = "Doctor Details";
}

<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">License Number:</dt>
        <dd class="col-sm-10">@Model.LicenseNumber</dd>

        <dt class="col-sm-2">Specialty:</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.DepartmentName</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>