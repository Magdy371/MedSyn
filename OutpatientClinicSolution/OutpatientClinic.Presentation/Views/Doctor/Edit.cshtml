@model OutpatientClinic.DataAccess.Entities.Doctor
@{
    ViewData["Title"] = "Edit Doctor";
    var departments = ViewBag.Departments as IEnumerable<OutpatientClinic.DataAccess.Entities.Department>;
    var staffList = ViewBag.StaffList as IEnumerable<OutpatientClinic.DataAccess.Entities.Staff>;
    int? selectedStaffId = ViewBag.SelectedStaffId as int?;
}

<h2>Edit Doctor</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DoctorId" />
    <div class="form-group">
        <label asp-for="Specialty" class="control-label"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LicenseNumber" class="control-label"></label>
        <input asp-for="LicenseNumber" class="form-control" />
        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DepartmentId" class="control-label">Department</label>
        <select id="DepartmentId" name="DepartmentId" class="form-control">
            <option value="">Select Department</option>
            @if (departments != null)
            {
                @foreach (var dept in departments)
                {
                    var optionTag = new TagBuilder("option");
                    optionTag.Attributes["value"] = dept.DepartmentId.ToString();
                    if (Model.DepartmentId == dept.DepartmentId)
                    {
                        optionTag.Attributes["selected"] = "selected";
                    }
                    optionTag.InnerHtml.Append(dept.DepartmentName);
                    @Html.Raw(optionTag.ToString())
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="staffId" class="control-label">Staff</label>
        <select id="staffId" name="staffId" class="form-control">
            <option value="">Select Staff</option>
            @if (staffList != null)
            {
                @foreach (var staff in staffList)
                {
                    var optionTag = new TagBuilder("option");
                    optionTag.Attributes["value"] = staff.StaffId.ToString();
                    if (selectedStaffId == staff.StaffId)
                    {
                        optionTag.Attributes["selected"] = "selected";
                    }
                    optionTag.InnerHtml.Append($"{staff.FirstName} {staff.LastName}");
                    @Html.Raw(optionTag.ToString())
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
