@model IEnumerable<OutpatientClinic.DataAccess.Entities.Doctor>
@{
    ViewData["Title"] = "Doctor List";
    var departments = ViewBag.Departments as IEnumerable<OutpatientClinic.DataAccess.Entities.Department>;
    int? selectedDepartment = ViewBag.SelectedDepartment as int?;
}

<h2>Doctor List</h2>

<form method="get" asp-action="Index">
    <div class="form-group">
        <label for="departmentFilter">Filter by Department:</label>
        <select id="departmentFilter" name="departmentId" class="form-control" onchange="this.form.submit()">
            <option value="">All</option>
            @if (departments != null)
            {
                @foreach (var dept in departments)
                {
                    var optionTag = new TagBuilder("option");
                    optionTag.Attributes["value"] = dept.DepartmentId.ToString();
                    if (selectedDepartment == dept.DepartmentId)
                    {
                        optionTag.Attributes["selected"] = "selected";
                    }
                    optionTag.InnerHtml.Append(dept.DepartmentName);
                    @Html.Raw(optionTag.ToString())
                }
            }
        </select>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Doctor</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Doctor ID</th>
            <th>Specialty</th>
            <th>License Number</th>
            <th>Department</th>
            <th>Staff</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var doctor in Model)
    {
        <tr>
            <td>@doctor.DoctorId</td>
            <td>@doctor.Specialty</td>
            <td>@doctor.LicenseNumber</td>
            <td>@doctor.Department?.DepartmentName</td>
            <td>
                @(doctor.DoctorNavigation != null 
                    ? $"{doctor.DoctorNavigation.FirstName} {doctor.DoctorNavigation.LastName}" 
                    : "N/A")
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@doctor.DoctorId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@doctor.DoctorId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
