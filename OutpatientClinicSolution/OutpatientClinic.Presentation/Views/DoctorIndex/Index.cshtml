@* Views/DoctorView/Index.cshtml *@
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<link href="~/css/DoctorIndex.css" rel="stylesheet" />
<div class="container-fluid py-4 doctor-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-6 text-primary font-weight-bold mb-3">Welcome, <span class="text-teal">Dr. @User.Identity.Name</span></h1>
            <div class="d-flex align-items-center">
                <i class="fas fa-hospital text-muted me-2"></i>
                <span class="text-muted">Cardiology Department</span>
                <div class="vr mx-3"></div>
                <i class="fas fa-calendar-day text-muted me-2"></i>
                <span class="text-muted">@DateTime.Now.ToString("dd MMM, yyyy")</span>
            </div>
        </div>
        <div class="avatar-container">
            <div class="avatar-circle bg-soft-primary">
                <i class="fas fa-user-md text-primary"></i>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Medical Records Card -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card medical-card curved-shape">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-container bg-cyan">
                            <i class="fas fa-file-medical"></i>
                        </div>
                        <h5 class="mb-0 ms-3">Patient Records</h5>
                    </div>
                    <p class="text-muted small mb-4">Access comprehensive medical histories and treatment plans</p>
                    <a asp-action="MedicalRecords" class="card-link">
                        Explore Records
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <div class="card-wave"></div>
                </div>
            </div>
        </div>

        <!-- Prescriptions Card -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card prescription-card curved-shape">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-container bg-blue">
                            <i class="fas fa-prescription-bottle"></i>
                        </div>
                        <h5 class="mb-0 ms-3">E-Prescriptions</h5>
                    </div>
                    <p class="text-muted small mb-4">Manage and track medication prescriptions digitally</p>
                    <a asp-action="Prescriptions" class="card-link">
                        View Medications
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <div class="card-wave"></div>
                </div>
            </div>
        </div>

        <!--Drug Card-->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card prescription-card curved-shape">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-container bg-blue">
                            <i class="fas fa-pills"></i>
                        </div>
                        <h5 class="mb-0 ms-3">E-Drugs</h5>
                    </div>
                    <p class="text-muted small mb-4">Access Drug Table</p>
                    <a asp-action="Medicine" class="card-link">
                        View Drugs
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <div class="card-wave"></div>
                </div>
            </div>
        </div>

        <!-- Lab Tests Card -->
        <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card lab-card curved-shape">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-container bg-purple">
                            <i class="fas fa-microscope"></i>
                        </div>
                        <h5 class="mb-0 ms-3">Lab Analysis</h5>
                    </div>
                    <p class="text-muted small mb-4">Review laboratory results and diagnostic reports</p>
                    <a asp-action="LabTests" class="card-link">
                        Analyze Data
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <div class="card-wave"></div>
                </div>
            </div>
        </div>

        <!-- Appointments Card -->
        @* <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="card appointment-card curved-shape">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-container bg-pink">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h5 class="mb-0 ms-3">Schedule</h5>
                    </div>
                    <p class="text-muted small mb-4">Manage patient appointments and consultations</p>
                    <a asp-action="Appointments" class="card-link">
                        View Calendar
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <div class="card-wave"></div>
                </div>
            </div>
        </div> *@
    </div>
</div>