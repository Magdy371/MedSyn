@model OutpatientClinic.Presentation.Models.LandingPageViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_generatedView.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/generatedLayout.css">
<link rel="stylesheet" href="~/css/home.css">

<div class="container py-5">
    <h1 class="text-center mb-5" style="color: #2c3e50; font-weight: bold;">Welcome to Our Outpatient Clinic</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Login Card -->
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-sign-in-alt icon"></i>
                    <h5 class="card-title">Login</h5>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Login</a>
                </div>
            </div>
        </div>
        <!-- Signup Card -->
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-user-plus icon"></i>
                    <h5 class="card-title">Signup</h5>
                    <a href="@Url.Action("Signup", "Auth")" class="btn btn-primary">Signup</a>
                </div>
            </div>
        </div>
        <!-- Patients Card -->
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-users icon"></i>
                    <h5 class="card-title">Patients</h5>
                    <p class="card-text">@Model.PatientCount</p>
                </div>
            </div>
        </div>
        <!-- Staff Card -->
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-user-tie icon"></i>
                    <h5 class="card-title">Staff</h5>
                    <p class="card-text">@Model.StaffCount</p>
                </div>
            </div>
        </div>
        <div class="col">
            <a href="@Url.Action("Index", "ClinicView")" class="card h-100 text-center text-decoration-none">
                <div class="card-body">
                    <i class="fas fa-clinic-medical me-2"></i>
                    <h5 class="card-title">Clinics</h5>
                    <p class="card-text">@Model.ClinicCount</p>
                </div>
            </a>
        </div>
        <!-- Appointments Card -->
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-calendar-check"></i>
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">@Model.AppointmentCount</p>
                </div>
            </div>
        </div>
        <!-- Departments Card (Clickable) -->
        <!-- Doctors Card (Clickable) -->
        <div class="col">
            <a href="@Url.Action("Index", "DepartmentView")" class="card h-100 text-center text-decoration-none">
                <div class="card-body">
                    <i class="fas fa-building-circle-check me-2"></i>
                    <h5 class="card-title">Departments</h5>
                    <p class="card-text">@Model.DepartmentCount</p>
                </div>
            </a>
        </div>
        
        <!-- Doctors Card (Clickable) -->
        <div class="col">
            <a href="@Url.Action("Index", "DoctorView")" class="card h-100 text-center text-decoration-none">
                <div class="card-body">
                    <i class="fas fa-user-doctor me-2"></i>
                    <h5 class="card-title">Doctors</h5>
                    <p class="card-text">@Model.DoctorCount</p>
                </div>
            </a>
        </div>
    </div>
</div>
