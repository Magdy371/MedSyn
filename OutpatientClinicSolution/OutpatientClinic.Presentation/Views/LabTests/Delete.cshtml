@model OutpatientClinic.DataAccess.Entities.LabTest

@{
    ViewData["Title"] = "Delete Lab Test";
}

<h1>Delete Lab Test</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Test Name</dt>
        <dd class="col-sm-10">@Model.TestName</dd>
        <dt class="col-sm-2">Test Date</dt>
        <dd class="col-sm-10">@Model.TestDate.ToString("g")</dd>
        <dt class="col-sm-2">Patient</dt>
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">
            @(Model.Patient?.FirstName + " " + Model.Patient?.LastName ?? "Unknown Patient")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TestId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>