@model OutpatientClinic.DataAccess.Entities.MedicalRecord

<h2>Create Medical Record</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AppointmentId">Appointment</label>
        <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.Appointments"></select>
        <span asp-validation-for="AppointmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Diagnosis">Diagnosis</label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Treatment">Treatment</label>
        <input asp-for="Treatment" class="form-control" />
        <span asp-validation-for="Treatment" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>