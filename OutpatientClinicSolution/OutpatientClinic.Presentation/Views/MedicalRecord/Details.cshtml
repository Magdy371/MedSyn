@model OutpatientClinic.DataAccess.Entities.MedicalRecord

<h2>Medical Record Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Record ID</dt>
        <dd class="col-sm-10">@Model.RecordId</dd>
        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">@Model.Appointment.Patient.FirstName @Model.Appointment.Patient.LastName</dd>
        <dt class="col-sm-2">Appointment Date</dt>
        <dd class="col-sm-10">@Model.Appointment.AppointmentDateTime.ToString("g")</dd>
        <dt class="col-sm-2">Diagnosis</dt>
        <dd class="col-sm-10">@Model.Diagnosis</dd>
        <dt class="col-sm-2">Treatment</dt>
        <dd class="col-sm-10">@Model.Treatment</dd>
        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>
        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate?.ToString("g")</dd>
    </dl>
</div>