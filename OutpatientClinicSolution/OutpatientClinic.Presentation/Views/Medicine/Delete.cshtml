@model OutpatientClinic.DataAccess.Entities.Medicine

@{
    ViewData["Title"] = "Delete Medicine";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this medicine?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MedicineId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>