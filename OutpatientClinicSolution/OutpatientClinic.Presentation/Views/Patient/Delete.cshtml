@model OutpatientClinic.Presentation.Models.PatientViewModel
@{
    ViewData["Title"] = "Delete Patient";
}
<div class="container my-4">
    <h2 class="mb-4 text-center text-danger">Delete Patient</h2>
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Are you sure?</h4>
        </div>
        <div class="card-body">
            <p>You are about to delete the following patient:</p>
            <ul class="list-group">
                <li class="list-group-item"><strong>Full Name:</strong> @Model.FullName</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Phone:</strong> @Model.PhoneNumber</li>
                <li class="list-group-item"><strong>Date of Birth:</strong> @(Model.Dob?.ToString("d") ?? "Not set")</li>
            </ul>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
