@model OutpatientClinic.DataAccess.Entities.Prescription

<h2>Delete Prescription</h2>

<h3>Are you sure you want to delete this prescription?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Prescription ID</dt>
        <dd class="col-sm-10">@Model.PrescriptionId</dd>
        <dt class="col-sm-2">Patient Name</dt>
        <dd class="col-sm-10">@Model.Record.Appointment.Patient.FirstName @Model.Record.Appointment.Patient.LastName</dd>
        <dt class="col-sm-2">Medical Name</dt>
        <dd class="col-sm-10">@Model.MedicalName</dd>
        <dt class="col-sm-2">Dosage</dt>
        <dd class="col-sm-10">@Model.Dosage</dd>
        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Instructions</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PrescriptionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>