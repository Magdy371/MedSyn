@model List<OutpatientClinic.Presentation.Models.UserManagementDto>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">User Management</h6>
            <a asp-action="Create" class="btn btn-primary custom-btn-size">
                <i class="fas fa-plus"></i> Add New User
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Full Name</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.FullName</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary custom-btn-size">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger custom-btn-size">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-btn-size {
        padding: 0.5rem 1rem; /* Adjust the padding to change the button size */
        font-size: 1rem; /* Adjust the font size if needed */
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "pageLength": 10,
                "order": [[0, "asc"]]
            });
        });
    </script>
}
